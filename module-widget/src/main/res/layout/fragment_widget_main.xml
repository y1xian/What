<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.yyxnb.module_widget.ui.WidgetMainFragment">

        <FrameLayout
            android:id="@+id/flContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.yyxnb.what.view.tabbar.TabBarView
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            app:tb_focusColor="@color/colorTheme"
            app:tb_iconPadding="2dp"
            app:tb_normalColor="@color/colorText"
            app:tb_paddingNavigationBar="false"
            app:tb_textSize="10sp" />

    </LinearLayout>
</layout>