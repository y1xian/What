<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="StatusView">
        <attr name="sv_loading_view" format="reference" />
        <attr name="sv_empty_view" format="reference" />
        <attr name="sv_error_view" format="reference" />
    </declare-styleable>

    <!--标题栏-->
    <declare-styleable name="TitleBar">
        <!-- 状态栏背景 颜色 -->
        <attr name="tb_statusBarColor" format="color" />
        <!-- 标题栏背景 颜色 -->
        <attr name="tb_titleBarColor" format="color" />
        <!-- 填充状态栏 -->
        <attr name="tb_fillStatusBar" format="boolean" />
        <!-- 标题栏高度 -->
        <attr name="tb_titleBarHeight" format="dimension" />
        <!-- 显示标题栏分割线 -->
        <attr name="tb_showBottomLine" format="boolean" />
        <!-- 标题栏分割线颜色 -->
        <attr name="tb_bottomLineColor" format="color" />

        <!-- 左边视图类型 -->
        <attr name="tb_leftType">
            <enum name="none" value="0" />
            <enum name="textView" value="1" />
            <enum name="imageButton" value="2" />
            <enum name="customView" value="3" />
        </attr>
        <!-- TextView 文字, 对应leftType_TextView -->
        <attr name="tb_leftText" format="string" />
        <!-- TextView 颜色, 对应leftType_TextView -->
        <attr name="tb_leftTextColor" format="color" />
        <!-- TextView 字体大小, 对应leftType_TextView -->
        <attr name="tb_leftTextSize" format="dimension" />
        <!-- TextView 左边图片, 对应leftType_TextView -->
        <attr name="tb_leftDrawable" format="reference" />
        <!-- TextView 左边padding, 对应leftType_TextView -->
        <attr name="tb_leftDrawablePadding" format="dimension" />
        <!-- ImageView 资源, 对应leftType_ImageBotton -->
        <attr name="tb_leftImageResource" format="reference" />
        <!-- 左边自定义布局, 对应leftType_CustomView -->
        <attr name="tb_leftCustomView" format="reference" />

        <!-- 右边视图类型 -->
        <attr name="tb_rightType">
            <enum name="none" value="0" />
            <enum name="textView" value="1" />
            <enum name="imageButton" value="2" />
            <enum name="customView" value="3" />
        </attr>
        <!-- TextView 文字, 对应rightType_TextView -->
        <attr name="tb_rightText" format="string" />
        <!-- TextView 颜色, 对应rightType_TextView -->
        <attr name="tb_rightTextColor" format="color" />
        <!-- TextView 字体大小, 对应rightType_TextView -->
        <attr name="tb_rightTextSize" format="dimension" />
        <!-- ImageView 资源, 对应rightType_ImageBotton -->
        <attr name="tb_rightImageResource" format="reference" />
        <!-- 右边自定义布局, 对应rightType_CustomView -->
        <attr name="tb_rightCustomView" format="reference" />

        <!-- 中间视图类型 -->
        <attr name="tb_centerType">
            <enum name="none" value="0" />
            <enum name="textView" value="1" />
            <enum name="searchView" value="2" />
            <enum name="customView" value="3" />
        </attr>
        <!-- TextView 文字, 对应centerType_TextView -->
        <attr name="tb_centerText" format="string" />
        <!-- TextView 颜色, 对应centerType_TextView -->
        <attr name="tb_centerTextColor" format="color" />
        <!-- TextView 字体大小, 对应centerType_TextView -->
        <attr name="tb_centerTextSize" format="dimension" />
        <!-- TextView 跑马灯效果, 默认打开, 对应centerType_TextView -->
        <attr name="tb_centerTextMarquee" format="boolean" />
        <!-- 子标题TextView 文字, 对应centerType_TextView -->
        <attr name="tb_centerSubText" format="string" />
        <!-- 子标题TextView 颜色, 对应centerType_TextView -->
        <attr name="tb_centerSubTextColor" format="color" />
        <!-- 子标题TextView 字体大小, 对应centerType_TextView -->
        <attr name="tb_centerSubTextSize" format="dimension" />
        <!-- 中间自定义布局, 对应centerType_CustomView -->
        <attr name="tb_centerCustomView" format="reference" />
    </declare-styleable>

    <!--可以调节drawable大小的RadioButton-->
    <declare-styleable name="DrawableTextView">
        <attr name="drawableSize" format="dimension" />
        <attr name="top_drawableSize" format="dimension" />
        <attr name="left_drawableSize" format="dimension" />
        <attr name="right_drawableSize" format="dimension" />
        <attr name="bottom_drawableSize" format="dimension" />
        <attr name="top_drawable" format="reference" />
        <attr name="left_drawable" format="reference" />
        <attr name="right_drawable" format="reference" />
        <attr name="bottom_drawable" format="reference" />
    </declare-styleable>

    <!--TextView 上下左右图片的大小-->
    <declare-styleable name="TextImageView">
        <attr name="drawableLeftWidth" format="dimension" />
        <attr name="drawableLeftHeight" format="dimension" />
        <attr name="drawableTopWidth" format="dimension" />
        <attr name="drawableTopHeight" format="dimension" />
        <attr name="drawableRightWidth" format="dimension" />
        <attr name="drawableRightHeight" format="dimension" />
        <attr name="drawableBottomWidth" format="dimension" />
        <attr name="drawableBottomHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FlowlayoutTags">
        <!-- 背景颜色 -->
        <attr name="tag_backgroundColor" format="reference|color" />
        <!-- 选中背景颜色 -->
        <attr name="tag_checkedBackgroundColor" format="reference|color" />
        <!-- 按下颜色 -->
        <attr name="tag_pressedBackgroundColor" format="reference|color" />

        <!-- 横 边距 -->
        <attr name="tag_horizontalSpacing" format="dimension" />
        <!-- 纵 边距 -->
        <attr name="tag_verticalSpacing" format="dimension" />
        <!-- 横 padding -->
        <attr name="tag_horizontalPadding" format="dimension" />
        <!-- 纵 padding -->
        <attr name="tag_verticalPadding" format="dimension" />

        <!-- 文字颜色 -->
        <attr name="tag_textColor" format="color" />
        <!-- 选中文字颜色 -->
        <attr name="tag_checkedTextColor" format="reference|color" />
        <!-- 文字大小 -->
        <attr name="tag_textSize" format="dimension" />

        <!-- 边框圆角半径 -->
        <attr name="tag_radius" format="dimension" />
        <attr name="tag_bottomLeftRadius" format="dimension" />
        <attr name="tag_bottomRightRadius" format="dimension" />
        <attr name="tag_topLeftRadius" format="dimension" />
        <attr name="tag_topRightRadius" format="dimension" />
        <!-- 边框颜色 -->
        <attr name="tag_strokeColor" format="reference|color" />
        <!-- 选中 边框颜色 -->
        <attr name="tag_checkedStrokeColor" format="reference|color" />
        <!-- 边框宽度 -->
        <attr name="tag_strokeWidth" format="dimension" />
        <!-- 是否多选 -->
        <attr name="tag_multiChooseable" format="boolean" />
        <attr name="tag_singleLine" format="boolean" />
        <!-- 是否可选 -->
        <attr name="tag_isSelect" format="boolean" />

        <!-- 单位dp,为了适应wrap_content用integer -->
        <attr name="tag_width" format="integer|enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_parent" value="-1" />
        </attr>
        <attr name="tag_height" format="integer|enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_parent" value="-1" />
        </attr>
        <attr name="tag_maxEms" format="integer" />
    </declare-styleable>

    <!-- 侧滑菜单 -->
    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>

    <!-- 横向导航栏 -->
    <declare-styleable name="TabBarView">
        <!-- 高度 -->
        <attr name="android:layout_height" />
        <!-- tab按钮上下内边距 -->
        <attr name="tb_paddingVertical" format="dimension" />
        <!-- 不使用颜色渲染（即使用图表本身的颜色） -->
        <attr name="tb_noDyeing" format="boolean" />
        <!-- 禁止选择 -->
        <attr name="tb_noSelect" format="boolean" />
        <!-- 图标内边距 -->
        <attr name="tb_iconPadding" format="dimension" />
        <!-- 文字大小 -->
        <attr name="tb_textSize" format="dimension" />
        <!-- 处于焦点状态的颜色 -->
        <attr name="tb_focusColor" format="color" />
        <!-- 处于普通状态的颜色 -->
        <attr name="tb_normalColor" format="color" />
        <!-- tab按钮按下效果 -->
        <attr name="tb_clickBackground">
            <!-- 默认矩形水波纹效果 -->
            <enum name="ripple" value="0" />
            <!-- 外弧形水波纹效果 -->
            <enum name="rippleOutside" value="1" />
            <!-- 纯灰色 -->
            <enum name="gray" value="2" />
            <enum name="empty" value="3" />
        </attr>
        <!-- 是否开启底部导航栏沉浸式，开启后，Tabbar会自动设置一段 paddingBottom 边距以适应底栏高度。-->
        <attr name="tb_paddingNavigationBar" format="boolean" />
        <!-- 左右分割线（资源id）-->
        <attr name="tb_splitLine" format="reference" />
        <!-- 未读消息小红点背景 -->
        <attr name="tb_unreadBackground" format="reference" />
    </declare-styleable>

</resources>
