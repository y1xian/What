<resources>

    <style name="Animation" parent="@android:style/Animation" />

    <!--滑动 上进上出-->
    <style name="Animation.TopToTop">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>
    <!--滑动 下进下出-->
    <style name="Animation.BottomToBottom">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <!--滑动 左进左出-->
    <style name="Animation.LeftToLeft">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>
    <!--滑动 左进右出-->
    <style name="Animation.LeftToRight">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>
    <!--滑动 右进右出-->
    <style name="Animation.RightToRight">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>
    <!--滑动 右进左出-->
    <style name="Animation.RightToLeft">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>

    <!--缩放 淡入淡出-->
    <style name="Animation.Scale">
        <item name="android:windowEnterAnimation">@anim/scale_enter</item>
        <item name="android:windowExitAnimation">@anim/scale_exit</item>
    </style>

</resources>