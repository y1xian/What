<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_notice_big_notify_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/music_notice_def_cover"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/music_notice_def_cover"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/music_notice_def_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="周杰伦" />

        <TextView
            android:id="@+id/music_notice_def_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/music_notice_def_title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:text="周杰伦"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/music_notice_def_btn_collect"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.2"
                android:src="@drawable/ic_music_collect_noimal" />

            <ImageView
                android:id="@+id/music_notice_def_btn_last"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_music_mini_last_noimal" />

            <ImageView
                android:id="@+id/music_notice_def_btn_pause"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_music_mini_play_noimal" />

            <ImageView
                android:id="@+id/music_notice_def_btn_next"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_music_mini_next_noimal" />

            <TextView
                android:id="@+id/music_notice_def_btn_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="词"
                android:textSize="15sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_above="@+id/ll_controller"
            android:layout_marginBottom="8dp"
            android:background="#8C777777" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/music_notice_def_btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:padding="6dp"
        android:src="@drawable/ic_music_mini_close" />

</RelativeLayout>