<?xml version="1.0" encoding="utf-8"?>
<com.yyxnb.lib_localservice.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yyxnb.lib_localservice.view.SquareImageView
        android:id="@+id/ivPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@color/color_gray" />

    <TextView
        android:id="@+id/tvSelect"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_gravity="right|top"
        android:layout_margin="6dp"
        android:background="@drawable/select_oval_selector"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="visible" />

    <com.yyxnb.lib_localservice.view.TextImageView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="6dp"
        android:drawableLeft="@drawable/icon_play"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:drawableLeftHeight="15dp"
        app:drawableLeftWidth="15dp" />


</com.yyxnb.lib_localservice.view.SquareFrameLayout>
